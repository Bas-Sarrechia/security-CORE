@model UserModel

<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title> Cryptography pratical</title>
</head>
<body style="margin-left: 30px">

<div>
    <H1 class="display-4 mb-3">Login:</H1>
    <form method="post" class="w-50">
        <div class="form-group w-50">
            <input asp-for="UserName" class="form-control form-control-lg" placeholder="ID"/>
            <span class="text-danger" asp-validation-for="UserName"></span>
            <div class="text-danger">
                @Html.ValidationMessage("Invalid username")
            </div>
        </div>
        <div class="form-group w-50">
            <input asp-for="Password" class="form-control form-control-lg" placeholder="Password" />
            <span class="text-danger" asp-validation-for="Password"></span>
            <div class="text-danger">@Html.ValidationMessage("Invalid password")</div>
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-primary"/>
        </div>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" asp-action="CreateNewUser">Sign up</a>
    </form>
</div>
</body>
</html>