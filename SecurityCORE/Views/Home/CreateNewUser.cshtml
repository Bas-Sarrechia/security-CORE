@model UserModel;

<!doctype html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title> Cryptography creating a user</title>
</head>
<body style="margin-left: 30px">

<div>
    <H1 class="display-4 mb-3">New User:</H1>
    <form method="post" class="w-50">
        <div class="form-group w-50">
            <input asp-for="UserName" type="text" class="form-control form-control-lg" placeholder="ID" />
            <span class="text-danger" asp-validation-for="UserName"></span>
            <div class="text-danger">
                @Html.ValidationMessage("duplicate user")
            </div>
        </div>
        <div class="form-group w-50">
            <input asp-for="Password" class="form-control form-control-lg" placeholder="Password"/>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <a asp-action="Login" class="btn btn-primary">◁ Back</a>
            <input type="submit" value="Create!" class="btn btn-primary"/>
        </div>
    </form>
</div>
</body>
</html>